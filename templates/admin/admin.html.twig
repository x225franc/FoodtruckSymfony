{% extends 'base.admin.html.twig' %}

{% block title %}Accueil - Admin{% endblock %}

{% block admin_content %}
    <div class="p-6">
        <h2 class="text-2xl font-bold text-green-600 mb-6">Bienvenue sur le panel admin de la Burgererie !</h2>
        <div class="text-gray-600 leading-relaxed mb-6">
            <p class="mb-4">Dans ce panel, vous pouvez gérer :</p>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <a href="/admin/user" class="flex items-center p-4 bg-white rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-user-circle text-green-600 text-xl mr-3"></i>
                    <span>Modération des comptes</span>
                </a>
                <a href="/admin/category" class="flex items-center p-4 bg-white rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-list text-green-600 text-xl mr-3"></i>
                    <span>Modération des catégories</span>
                </a>
                <a href="/admin/product" class="flex items-center p-4 bg-white rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-utensils text-green-600 text-xl mr-3"></i>
                    <span>Modération des produits</span>
                </a>
                <a href="/admin/menu" class="flex items-center p-4 bg-white rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-concierge-bell text-green-600 text-xl mr-3"></i>
                    <span>Modération des menus</span>
                </a>
                <a href="/admin/contact" class="flex items-center p-4 bg-white rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-envelope text-green-600 text-xl mr-3"></i>
                    <span>Demandes de contact</span>
                </a>
                <a href="/admin/order" class="flex items-center p-4 bg-white rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-shopping-cart text-green-600 text-xl mr-3"></i>
                    <span>Gestion des commandes</span>
                </a>
                <a href="/admin/review" class="flex items-center p-4 bg-white rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-star text-green-600 text-xl mr-3"></i>
                    <span>Modération des évaluations utilisateurs</span>
                </a> 
                <a href="/home" class="flex items-center p-4 bg-white rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
                    <i class="fas fa-home text-green-600 text-xl mr-3"></i>
                    <span>Retourner à l'accueil</span>
                </a>
            </div>
        </div>
        
        <div class="flex justify-center">
            <img src="{{ asset('images/coming-soon.svg') }}" alt="img" class="w-2/5 h-auto mt-2"/>
        </div>
    </div>
{% endblock %}